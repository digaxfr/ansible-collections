[connection]
autoconnect=yes
id={{ _interface.key }}
type=bridge
interface-name={{ _interface.key }}

[ethernet]

[ipv4]
method=disabled

[ipv6]
method=manual
{% for address in (_interface.value.addresses | selectattr("type", "==", "ipv6")) %}
address{{ loop.index }}={{ address.address }}
{% endfor %}
ignore-auto-dns=true
ignore-auto-routes=true
